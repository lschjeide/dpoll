<div class="">
    <button class="btn btn-primary btn-lg" ng-click="showEvents()">All Events</button>
</div>

<h1>{{h1_value}} Event</h1>

<form id="myForm" name="myForm" novalidate>
  
    
    <input type="hidden" ng-model="event_id">
    <label for="name">Event Name</label><br>
    <input type="text" ng-model="name" id="name" name="name"><br>

    <label for="description">Description</label><br>
    <input type="text" ng-model="description" id="description" name="description">
    <br><br>

    <button ng-hide="hideEdit" class="btn btn-primary btn-lg" ng-click="addEvent(); showEvents();">Add</button>
    <button ng-hide="hideSave" class="btn btn-primary btn-lg" ng-click="saveEvent(); showEvents();">Save</button>

  </form>
